{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "rootDir": "src",                   // Assuming your code is in src/
    "outDir": "dist",                   // Compiled JS output
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false
  },
  "include": ["src/backend/**/*.ts"],   // âœ… fixed path
  "exclude": ["node_modules", "dist"]
}
